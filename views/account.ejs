<body>
    <!-- ======= Header ======= -->
    <header id="header" class="d-flex align-items-center">
      <div class="container d-flex align-items-center justify-content-between">
  
        <h1 class="logo"><a href="/">Overly Musical<span></span></a></h1>
        <!-- Uncomment below if you prefer to use an image logo -->
        <!-- <a href="index.html" class="logo"><img src="assets/img/logo.png" alt=""></a>-->
  
        <nav id="navbar" class="navbar">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/services" class="active">Services</a></li>
                <li><a href="/ourteam">Meet the Team</a></li>
                <% if (loggedIn) { %>
                    <li><a href="/data">Data</a></li>
                <% } %>
                <% if (loggedIn) { %>
                    <li><a href="/create">Create User</a></li>
                <% } %>
                <% if (loggedIn) { %>
                    <li><a href="/logout">Logout</a></li>
                <% } else {%> <li><a href="/login">Login</a></li> <%}%> 
            </ul>
          <i class="bi bi-list mobile-nav-toggle"></i>
        </nav><!-- .navbar -->
  
      </div>
    </header>
    <!-- End Header -->

  <br>
   
    <div class="container">
      <table>
        <thead>
          <tr>
              <th style="text-align: left; width: 33.33%">Username</th>
              <th style="text-align: left; width: 33.33%">Password</th>
              <th style="text-align: center; background-color: rgb(0,164,224); width: 33.33%"><% if (loggedIn && loggedInUsername === 'admin') { %>
                <a href="/create" class="btn btn-primary" style="background-color: white; color: black; border: none">Create User</a>
              <% } %></th>
          </tr>
      </thead>
        <tbody>
          <% for (let iCount = 0; iCount < dbUser.length; iCount++) { %>
            <tr>
                <td><%= dbUser[iCount].username %></td>
                <td><%= dbUser[iCount].password %></td>
                <td style="text-align: center;">
                    <form action="/edituser" method="GET" style="display: inline;">
                        <input type="hidden" name="editusername" value="<%= dbUser[iCount].username %>">
                        <button type="submit" class="btn btn-primary" style="background-color: rgb(0,164,224); border: none">Edit</button>
                    </form>  
                    <form action="/deleteuser" method="POST" style="display: inline;">
                        <input type="hidden" name="deleteusername" value="<%= dbUser[iCount].username %>">
                        <button type="submit" class="btn btn-primary" style="background-color: rgb(0,164,224); border: none">Delete</button>
                    </form>
                </td>
            </tr>            
          <% } %>
     </tbody>
   </table>
   </div>
   <br><br>
</body>
